<div class="padding-bottom padding-large">
      {% render 'module-header', 
        title: settings.corporate_contact_form_title, 
        body: settings.corporate_contact_form_body, 
        text_horizontal_alignment: 'left' 
      %}
</div>

<div class="contact-form-body">
      {% form 'contact', class: 'form' %}
    
        <div class="input-container">
          <input type="hidden" name="contact[tags]" value="corporate-account-inquiry">
        
          <div class="field-wrapper margin-bottom margin-medium">
    
            {% 
              render 'input', 
              label: settings.corporate_contact_form_input_name_label,
              placeholder: settings.corporate_contact_form_input_name_placeholder,
              name: 'name',
              type: 'text',
              required: true,
              value: form.name,
            %}

            {% 
              render 'input', 
              label: settings.corporate_contact_form_input_email_label,
              placeholder: settings.corporate_contact_form_input_email_placeholder,
              name: 'email',
              type: 'email',
              required: true,
              value: form.email,
            %}

            {% 
              render 'input', 
              label: settings.corporate_contact_form_input_phone_label,
              placeholder: settings.corporate_contact_form_input_phone_placeholder,
              name: 'phone',
              type: 'tel',
              required: true,
              value: form.phone,
            %}

            {% 
              render 'input', 
              label: settings.corporate_contact_form_input_company_label,
              placeholder: settings.corporate_contact_form_input_company_placeholder,
              name: 'company',
              type: 'text',
              required: true,
              value: form.company,
            %}

            <div>
              <label class="text-size-tiny uppercase" for="ContactForm-number-of-boxes">{{ settings.corporate_contact_form_input_boxes_label }}</label>
              <div class="select">
                <select
                  id="ContactForm-number-of-boxes"
                  name="contact[number_of_boxes]"
                >
                  <option>0-25</option>
                  <option>25-50</option>
                  <option>50-75</option>
                  <option>100-500</option>
                  <option>500-1000</option>
                  <option>1000+</option>
                </select>
                <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                  <use href="#icon-caret" />
                </svg>
              </div>
            </div>

            <div>
              <label class="text-size-tiny uppercase" for="ContactForm-budget">{{ settings.corporate_contact_form_input_budget_label }}</label>
              <div class="select">
                <select
                  id="ContactForm-budget"
                  name="contact[budget]"
                >
                  <option>$35-$50</option>
                  <option>$50-$70</option>
                  <option>$70-$100</option>
                  <option>$100+</option>
                </select>
                <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                  <use href="#icon-caret" />
                </svg>
              </div>
            </div>

            <div class="field-group">
              <label class="text-size-tiny uppercase" for="ContactForm-body">{{ settings.corporate_contact_form_input_message_label }}</label>
              
              <textarea
                required
                rows="3"
                id="ContactForm-body"
                class="text-area field_input"
                name="contact[body]"
                placeholder="{{ settings.corporate_contact_form_input_message_placeholder }}"
              >
                {{- form.body -}}
              </textarea>
            </div>
    
          </div>
    
          <button type="submit" class="button contact-submit-button" name="commit" id="Subscribe" aria-label="{{ 'contact.button_label' | t }}">
            <span>{{ settings.contact_form_cta_text }}</span>
          </button>
        </div>
    
        {%- if form.errors -%}
          <small class="text-size-tiny text-color-grey-500 contact-form__message form__message margin-top margin-small" id="Contact-error--{{ id }}">
            {% render 'icon-error' %}
            {{ form.errors.translated_fields['email'] | capitalize }} 
            {{ form.errors.messages['email'] }}
          </small>
        {%- endif -%}
    
        {%- if form.posted_successfully? -%}

            <script type="module">      
                  window.initDownloadFromForm()
            </script>
    
          <div style="display: flex; flex-direction: column; align-items: center; justify-content: center;" class="text-align-center">
            <h3 class="text-size-tiny text-color-grey-500 form__message" id="Contact-success--{{ id }}" tabindex="-1" autofocus>
              {% render 'icon-success' %}
              {{ settings.contact_form_success_message }}
            </h3>
          </div>
        {%- endif -%}
        
      {% endform %}
    </div>