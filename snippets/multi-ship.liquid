<script type="module">
  const initMultiship = () => {
    {% comment %} for each element with a class of "button", take the innerText, and place it into a newly created span element that lives inside of the button element {% endcomment %}
    [...document.querySelectorAll('.ms__multishipping-cart .button')].forEach((button) => {
      const buttonText = button.innerText;
      button.innerHTML = '';
      const span = document.createElement('span');
      span.innerText = buttonText;
      button.appendChild(span);
    });
    {% comment %} for each a tag, add the "link" class {% endcomment %}
    [...document.querySelectorAll('.ms__multishipping-cart a')].forEach((a) => {
      a.classList.add('link');
    });

    const msField = document.querySelector('.sixteen.wide.ms__field');

    const returnToCart = document.createElement('a');
    returnToCart.classList.add('link', 'return-to-cart');
    returnToCart.href = 'https://www.foodiepages.ca/cart';
    returnToCart.innerText = 'Return to cart';
    msField.appendChild(returnToCart);
  }

  initMultiship()


</script>

