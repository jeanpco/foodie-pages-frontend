<div class="plain-content container">
  <div>
    {% render 'module-header', 
      overline: section.settings.overline, 
      title: section.settings.title,
      body: section.settings.body,
      text_horizontal_alignment: 'left',
      heading_style: section.settings.heading_style,
    %}
  </div>
</div>

{% schema %}
{
  "name": "Plain Content",
  "tag": "section",
  "class": "section section-plain-content padding-vertical padding-huge",
  "settings": [
    {
      "type": "text",
      "id": "overline",
      "label": "Overline",
      "default": "Corporate solutions"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Team Solutions"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body",
      "default": "We help businesses connect with people and make lasting impressions."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Get a quote"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "select",
      "id": "heading_style",
      "options": [
        {
          "value": "h2",
          "label": "Heading 2"
        },
        {
          "value": "h1",
          "label": "Heading 1"
        }
      ],
      "default": "h1",
      "label": "Heading style"
    }
  ],
  "presets": [
    {
      "name": "Plain Content"
    }
  ]
}
{% endschema %}
