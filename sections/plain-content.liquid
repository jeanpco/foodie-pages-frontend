{{ 'module-plain-content.css' | asset_url | stylesheet_tag }}

{% assign body = section.settings.body %}
{% assign overline = section.settings.overline %}
{% assign title = section.settings.title %}

{% if template == 'collection' %}
  {% assign body = collection.description %}
  {% assign overline = collection.metafields.custom.overline %}
  {% assign title = collection.title %}
{% endif %}

<div class="plain-content container">
  <div class="plain-content_header padding-bottom padding-large">
    {% render 'module-header', 
      overline: overline, 
      title: title,
      body: body,
      text_horizontal_alignment: 'left',
      heading_style: section.settings.heading_style,
    %}
  </div>
</div>

<style>
  .plain-content_header {
    max-width: 50rem;
    width: 100%;
    margin-right: auto;
  }
  
</style>

{% schema %}
{
  "name": "Plain Content",
  "tag": "section",
  "class": "section section-plain-content padding-top padding-huge",
  "settings": [
    {
      "type": "text",
      "id": "overline",
      "label": "Overline",
      "default": "Corporate solutions"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "{{ collection.title }}"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Get a quote"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "select",
      "id": "heading_style",
      "options": [
        {
          "value": "h2",
          "label": "Heading 2"
        },
        {
          "value": "h1",
          "label": "Heading 1"
        }
      ],
      "default": "h1",
      "label": "Heading style"
    }
  ],
  "presets": [
    {
      "name": "Plain Content"
    }
  ]
}
{% endschema %}
