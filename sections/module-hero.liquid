<div class="hero-background {{ section.settings.background_color }}">
  <div class="padding-vertical padding-xlarge">
    <div class="container hero-container {{ section.settings.layout_style }}">
      <div class="hero-content {{ section.settings.layout_style }}">
        <div class="hero-content_primary">
          <small class="hero-content_overline text-size-tiny uppercase text-color-tertiary">{{ section.settings.overline }}</small>
          <h1 class="hero-content_title dual-font-title">{{ section.settings.title }}</h1> 
        </div>
        <div class="hero-content_secondary">
          <p class="hero-content_body margin-top margin-medium mobile-margin-small">{{ section.settings.body }}</p> 

          {% assign ctasArray = section.blocks | where: "type", "cta" %}
          {% assign numberOfCtas = ctasArray | size %}

          {% if numberOfCtas > 0 %}
            <div class="hero-content_ctas margin-top margin-top margin-medium mobile-margin-0">

              {% for block in ctasArray %}
                <div class="margin-top mobile-margin-small">
                  <a 
                    class="button {% if forloop.first %}margin-right margin-small{% endif %}{% if forloop.first == false %} is-secondary{% endif %}" 
                    href="{{ block.settings.cta_link }}"
                  >
                    <span>{{ block.settings.cta_text }}</span>
                  </a>
                </div>
              {% endfor %} 
            </div>
          {% endif %}

          {% assign trustedByArray = section.blocks | where: "type", "trusted_by" %}
          {% assign numberOfTrustedBy = trustedByArray | size %}

          {% if numberOfTrustedBy > 0 %}
            <div class="hero-content_trusted_by__container margin-bottom margin-medium">
              <div class="hero-content_trusted_by margin-top margin-xxlarge mobile-margin-xlarge">
                <p class="hero-content_trusted_by__text text-size-tiny text-color-grey-400 uppercase margin-bottom mobile-margin-small">{{ section.settings.trusted_by_text }}</p>
                {% for block in trustedByArray %}
                  <img class="{% if forloop.first %}mobile-margin-0{% endif %} hero-content_trusted_by__logo margin-left margin-medium" src="{{ block.settings.icon_url }}" alt="{{ block.settings.icon_alt_text }}" />
                {% endfor %} 
              </div>
            </div>
          {% endif %}
        </div>
      </div>
      <div class="hero-image {{ section.settings.layout_style }}">
        {%- comment -%} <img src="{{ section.settings.image_url | image_url }}" alt="{{ section.settings.image_alt_text }}" /> {%- endcomment -%}

        {{ section.settings.image | image_url: width: 800 | image_tag:
          loading: 'lazy',
          widths: '550, 720, 990, 1100, 1500, 2200, 3000'
        }}
      </div>
    </div>
  </div>
</div>

<style>

  @media (min-width: 1920px) {}
  @media (max-width: 767px) {}
  @media (max-width: 479px) {}

  .hero-content_trusted_by {
    display: flex;
    align-items: center;
  }

  @media (max-width: 479px) {
    .hero-content_trusted_by {
      display: flex;
      flex-wrap: wrap;
    } 

    .hero-content_trusted_by__text {
      width: 100%;
    }

    .hero-content_trusted_by__logo {
      max-height: 1rem;
    }
  }

  .hero-container {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
  }

  .hero-container.rows {
    flex-direction: column;
  }

  .hero-content_ctas {
    display: flex;
    flex-wrap: wrap;
  }

  @media (max-width: 990px) {
    .hero-container {
      display: flex;
      flex-direction: column;
    } 
  }

  .hero-content {
    width: 45%;
  }

  .hero-content.rows {
    order: 1;
  }

  .hero-image.rows {
    order: 2;
  }

  @media (min-width: 991px) {
    .hero-content.rows {
      display: flex;
      width: 100%;
      align-items: flex-end;
      justify-content: space-between;
    }

    .hero-content.rows .hero-content_primary {
      max-width: 37.5rem;
      padding-right: 3rem;
      margin-right: auto;
    }

    .hero-content.rows .hero-content_secondary {
      max-width: 37.5rem;
      margin-left: auto;
    }
  }

  .hero-content.rows .hero-content_secondary .hero-content_trusted_by__container {
    margin-bottom: 0;
  }

  .hero-image {
    width: 45.7%;
    border-radius: 1rem;
    overflow: hidden;
  }

  .hero-image.rows {
    width: 100%;
    margin-top: 3rem;
  }

  .hero-image.rows img {
    aspect-ratio: unset;
    margin: 0 auto;
    display: block;
    width: 100%;
    height: auto;
  }

    @media (max-width: 990px) {

    .hero-image.two-columns {
      margin-bottom: 2rem;
    }

    .hero-content {
      order: 2;
    }

    .hero-content,
    .hero-image {
      width: 100%;
      margin: 0 auto;
    }

    .hero-image {
      display: flex;
      justify-content: center;
      align-items: center;
      order: 1;
    }
  }

  .hero-image img {
    width: auto;
    height: 100%;
    aspect-ratio: 599/603;
  }

  @media (max-width: 990px) {
    .hero-image img {
      margin: 0 auto;
      display: block;
      width: 100%;
      height: auto;
      aspect-ratio: 550/550;
    }
  }
  
</style>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section section-hero",
  "settings": [
    {
      "type": "text",
      "id": "overline",
      "default": "Quick shop",
      "label": "Overline"
    },
    {
      "type": "richtext",
      "id": "title",
      "default": "<p>Gifts that <i>celebrate</i> small business</p>",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "body",
      "default": "Each foodiepages gift basket is designed with premium goods from diverse, independently-owned makers and brands across Canada.",
      "label": "Body"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "select",
      "id": "layout_style",
      "options": [
        {
          "value": "two-columns",
          "label": "Two Columns"
        },
        {
          "value": "rows",
          "label": "Rows"
        }
      ],
      "default": "two-columns",
      "label": "Layout Style"
    },
    {
      "type": "select",
      "id": "background_color",
      "options": [
        {
          "value": "background-color-azul-verdoso-10",
          "label": "Color - Azul Verdoso 10"
        },
        {
          "value": "background-color-secondary",
          "label": "Color - White"
        }
      ],
      "default": "background-color-azul-verdoso-10",
      "label": "Background Color"
    },
    {
      "type": "header",
      "content": "Trusted By Settings"
    },
    {
      "type": "text",
      "id": "trusted_by_text",
      "default": "Trusted by",
      "label": "Trusted by - Text"
    }
  ],
  "blocks": [
    {
      "type": "cta",
      "name": "CTA",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "cta_text",
          "default": "Shop all",
          "label": "CTA Text"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA Link"
        }
      ]
    },
    {
      "type": "trusted_by",
      "name": "Trusted By",
      "limit": 4,
      "settings": [
        {
          "type": "url",
          "id": "icon_url",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "icon_alt_text",
          "label": "Icon Alt Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
