{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}


<footer class="footer">

  <div class="footer-items">
    <div class="footer_details">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.image.alt }}">
      {% endif %}
  
      {%- if section.settings.show_social -%}
        <ul class="footer-socials" role="list">
          {%- if settings.social_twitter_link != blank -%}
            <li class="footer-socials_item">
              <a href="{{ settings.social_twitter_link }}" class="footer-socials_item--link" >
                {%- render 'icon-twitter' -%}
                <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
              </a>
            </li>
          {%- endif -%}
          {%- if settings.social_facebook_link != blank -%}
            <li class="footer-socials_item">
              <a href="{{ settings.social_facebook_link }}" class="footer-socials_item--link" >
                {%- render 'icon-facebook' -%}
                <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
              </a>
            </li>
          {%- endif -%}
          {%- if settings.social_pinterest_link != blank -%}
            <li class="footer-socials_item">
              <a href="{{ settings.social_pinterest_link }}" class="footer-socials_item--link" >
                {%- render 'icon-pinterest' -%}
                <span class="visually-hidden">{{ 'general.social.links.pinterest' | t }}</span>
              </a>
            </li>
          {%- endif -%}
          {%- if settings.social_instagram_link != blank -%}
            <li class="footer-socials_item">
              <a href="{{ settings.social_instagram_link }}" class="footer-socials_item--link" >
                {%- render 'icon-instagram' -%}
                <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
              </a>
            </li>
          {%- endif -%}
          {%- if settings.social_tiktok_link != blank -%}
            <li class="footer-socials_item">
              <a href="{{ settings.social_tiktok_link }}" class="footer-socials_item--link" >
                {%- render 'icon-tiktok' -%}
                <span class="visually-hidden">{{ 'general.social.links.tiktok' | t }}</span>
              </a>
            </li>
          {%- endif -%}
          {%- if settings.social_tumblr_link != blank -%}
            <li class="footer-socials_item">
              <a href="{{ settings.social_tumblr_link }}" class="footer-socials_item--link" >
                {%- render 'icon-tumblr' -%}
                <span class="visually-hidden">{{ 'general.social.links.tumblr' | t }}</span>
              </a>
            </li>
          {%- endif -%}
          {%- if settings.social_snapchat_link != blank -%}
            <li class="footer-socials_item">
              <a href="{{ settings.social_snapchat_link }}" class="footer-socials_item--link" >
                {%- render 'icon-snapchat' -%}
                <span class="visually-hidden">{{ 'general.social.links.snapchat' | t }}</span>
              </a>
            </li>
          {%- endif -%}
          {%- if settings.social_youtube_link != blank -%}
            <li class="footer-socials_item">
              <a href="{{ settings.social_youtube_link }}" class="footer-socials_item--link" >
                {%- render 'icon-youtube' -%}
                <span class="visually-hidden">{{ 'general.social.links.youtube' | t }}</span>
              </a>
            </li>
          {%- endif -%}
          {%- if settings.social_vimeo_link != blank -%}
            <li class="footer-socials_item">
              <a href="{{ settings.social_vimeo_link }}" class="footer-socials_item--link" >
                {%- render 'icon-vimeo' -%}
                <span class="visually-hidden">{{ 'general.social.links.vimeo' | t }}</span>
              </a>
            </li>
          {%- endif -%}
        </ul>
      {%- endif -%}
    </div>
  
    <div class="footer_links">
      <ul class="footer-links" role="list">
        {% for link in linklists[section.settings.menu].links %}
          <li class="footer-links_item">
            <a href="{{ link.url }}" class="footer-links_item--link">
              {{ link.label }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="footer-legal">

    <div class="footer-copyright">
      &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: routes.root_url }}
    </div>

    <div class="footer-legal_menu">
      <ul class="footer-legal_menu--list" role="list">
        {% for link in linklists[section.settings.legal_menu].links %}
          <li class="footer-legal_menu--item">
            <a href="{{ link.url }}" class="footer-legal_menu--link">
              {{ link.label }}
            </a>
          </li>
        {%- endfor -%}
      </ul>
    </div>

  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu Columns",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "Menu Title",
          "label": "Title"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "info": "Select a Menu to display in this column"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Logo - Image"
    },
    {
      "type": "link_list",
      "id": "legal_menu",
      "label": "Legal Menu"
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      }
    ]
  }
}
{% endschema %}
