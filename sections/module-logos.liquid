{% assign overline = section.settings.overline %}

<div style="overflow: hidden;">
  <div class="module-logos" data-js-element="logos-module-{{ section.id }}">
    <div class="margin-vertical margin-huge">
      <div class="padding-bottom padding-xlarge">
        {% render 'module-header', 
          overline: overline, 
          title: '',
          cta_text: '',
          cta_link: '',
        %}
      </div>

      <div class="module-logos marquee">
        <div>
          {% for block in section.blocks %}
            <div class="logos-client-logo margin-right margin-large">
              <img src="{{ block.settings.icon_url }}" alt="{{ block.settings.title }}" />
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% if section.settings.animate_logos %}
  <style>

    .marquee {
      overflow: hidden;
      display: flex;
    }

    .marquee > div {
      display: flex;
      min-width: max-content;
    }

    .logos-client-logo {
      height: 4rem;
      width: auto;
      display: block;
      white-space: nowrap;
      opacity: 0.7;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .logos-client-logo img {
      width: auto;
      height: 100%;
    }
  </style>
  <script type="module">
    
    function Marquee(selector, speed) {
      const parentSelector = document.querySelector(selector);
      const clone = parentSelector.innerHTML;
      const firstElement = parentSelector.children[0];
      let i = 0;

      parentSelector.insertAdjacentHTML('beforeend', clone);
      parentSelector.insertAdjacentHTML('beforeend', clone);
    
      setInterval(function () {
        firstElement.style.marginLeft = `-${i}px`;

        if (i > firstElement.clientWidth) {
          i = 0;
        }
        i = i + speed;
      }, 0);
    }
    
    //after window is completed load
    //1 class selector for marquee
    //2 marquee speed 0.2
    window.addEventListener('load', () => {
      Marquee('.marquee', 0.2)
    })  


  </script> 
  {% else %}
    <style>
  
      .marquee > div {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
      }
  
      .logos-client-logo {
        height: 4rem;
        width: auto;
        display: block;
        white-space: nowrap;
        opacity: 0.7;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: var(--spacing-small-mobile) !important;
      }
  
      .logos-client-logo img {
        width: auto;
        height: 100%;
      }
      @media screen and (min-width: 990px){
        .marquee > div {
          display: grid;
          grid-template-columns: repeat(5,minmax(0,1fr));
          margin: 0;
          {% comment %} min-width: max-content; {% endcomment %}
        }
        .logos-client-logo img {
          height: 100%;
        }
      }
    </style>
{% endif %}

{% schema %}
{
  "name": "Logos",
  "tag": "section",
  "class": "section section-logos",
  "settings": [
    {
      "type": "text",
      "id": "overline",
      "default": "Quick Shop",
      "label": "Overline"
    },
    {
      "type": "checkbox",
      "id": "animate_logos",
      "label": "Animate logos",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "info": "Also used for Alt Text"
        },
        {
          "type": "url",
          "id": "icon_url",
          "label": "Client Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logos"
    }
  ]
}
{% endschema %}
