{% assign overline = section.settings.overline %}

<div style="overflow: hidden;">
  <div class="module-logos container" data-js-element="logos-module-{{ section.id }}">
    <div class="margin-vertical margin-huge">
      <div class="padding-bottom padding-xlarge">
        {% render 'module-header', 
          overline: overline, 
          title: '',
          cta_text: '',
          cta_link: '',
        %}
      </div>

      <div>
        <div class="marquee3k" data-speed="0.5" data-reverse="">

            <div class="module-logos">
              {% for block in section.blocks %}
                <img src="{{ block.settings.icon_url }}" class="logos-client-logo margin-right margin-large" alt="Quote Icon" />
              {% endfor %}
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/marquee3000@1.1.1/marquee3k.min.js"></script>

<script type="module">
  // @jeanpco TODO: on mobile, the spacing is off between logos
  Marquee3k.init();
</script> 

{% schema %}
{
  "name": "Logos",
  "tag": "section",
  "class": "section section-logos",
  "settings": [
    {
      "type": "text",
      "id": "overline",
      "default": "Quick Shop",
      "label": "Overline"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "url",
          "id": "icon_url",
          "label": "Client Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logos"
    }
  ]
}
{% endschema %}
